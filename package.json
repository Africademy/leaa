{
  "name": "@leaa/monorepo",
  "author": "solidzoro@live.com",
  "version": "0.0.2",
  "private": true,
  "sideEffect": false,
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.4.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/module-alias",
      "**/@tarojs/**"
    ]
  },
  "scripts": {
    "clear-node-moudles": "rimraf ./yarn.lock && rimraf ./yarn-error.log && rimraf ./node_modules",
    "install-all": "yarn workspaces run install --force",
    "nuke": "yarn clear-node-moudles && yarn install --force & yarn install-all",
    "tsc-check": "yarn workspaces run tsc-check",
    "u": "yarn upgrade-interactive --latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@tarojs/taro-weapp": "^1.3.13",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {}
}
