{
  "name": "@leaa/monorepo",
  "author": "solidzoro@live.com",
  "version": "0.0.1",
  "private": true,
  "sideEffect": false,
  "license": "BSD 3-Clause",
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.4.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/module-alias",
      "**/module-alias/**"
    ]
  },
  "scripts": {
    "clear-node-moudles": "rm ./yarn.lock && rm -rf ./yarn-error.log && rm -rf ./node_modules",
    "nuke": "clear-node-moudles && yarn install --force",
    "u": "yarn upgrade-interactive --latest",
    "tsc-check": "yarn workspaces run tsc-check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1"
  },
  "devDependencies": {}
}
