{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "es7", "esnext", "dom"],
    "types": ["node", "jest"],
    "baseUrl": "."
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "jest",
    "__mocks__",
    "__webpack_test__",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
