{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "@leaa/common/*": ["../_leaa-common/*"],
      "@leaa/api/*": ["./*"]
    }
  },
  "include": ["src/**/*", "test/**/*", "test/*", "typings/*", "index.js"],
  "exclude": ["node_modules", "_dist"]
}
