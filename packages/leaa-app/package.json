{
  "name": "@leaa/app",
  "author": "solidzoro@live.com",
  "version": "0.0.2",
  "private": true,
  "sideEffect": false,
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.4.0"
  },
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "---------------------------------------------------------------------- LINT ----": "----",
    "lint-js": "eslint \"src/**/*.{ts,tsx}\"",
    "lint": "yarn run lint-js",
    "fix-js": "yarn run lint-js --fix",
    "fix": "yarn run fix-js",
    "---------------------------------------------------------------------- TOOOLS ----": "----",
    "clean-cache": "rm -rf $TMPDIR/metro-* && rm -rf $TMPDIR/haste-map-*",
    "---------------------------------------------------------------------- TEST ----": "----",
    "test": "jest",
    "---------------------------------------------------------------------- EXPO ----": "----",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "web": "expo start --web",
    "---------------------------------------------------------------------- DEV ----": "----",
    "devclean": "yarn clean-cache && yarn dev",
    "dev": "expo start -c --ios"
  },
  "dependencies": {
    "expo": "^34.0.1",
    "react": "16.8.3",
    "react-dom": "^16.8.6",
    "react-native": "0.59.10",
    "react-native-gesture-handler": "~1.3.0",
    "react-native-reanimated": "~1.1.0",
    "react-native-unimodules": "~0.5.2",
    "react-native-web": "^0.11.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@types/react": "^16.8.23",
    "@types/react-native": "^0.57.65",
    "babel-preset-expo": "^6.0.0",
    "jest-expo": "^34.0.0",
    "typescript": "3.6.2"
  },
  "jest": {
    "preset": "react-native"
  }
}
