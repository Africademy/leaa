{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "_dist",
    "baseUrl": ".",
    //
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "@leaa/common/*": ["./*"]
    }
  },
  "include": ["src/**/*", "typings/*"],
  "exclude": ["node_modules", "_dist"]
}
